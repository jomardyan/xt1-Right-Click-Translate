{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "short_name": "Translate",
  "version": "1.3.0",
  "version_name": "1.3.0 release",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "author": "Hayk Jomardyan",
  "homepage_url": "https://github.com/jomardyan/xt1-Right-Click-Translate",
  "permissions": ["contextMenus", "tabs", "storage", "scripting", "activeTab", "notifications"],
  "host_permissions": ["https://api.mymemory.translated.net/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "commands": {
    "translate-selection": {
      "description": "Translate current selection with default target language",
      "suggested_key": {
        "default": "Alt+Shift+T"
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
