{
  "manifest_version": 3,
  "name": "Right-click Translate",
  "short_name": "Translate",
  "version": "1.1.0",
  "version_name": "1.1.0 release",
  "description": "Translate selected text from the context menu.",
  "author": "Hayk Jomardyan",
  "homepage_url": "https://github.com/hayk-jomardyan/right-click-translate",
  "permissions": ["contextMenus", "tabs", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
